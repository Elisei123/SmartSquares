<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="385dp"
        android:layout_height="539dp"
        android:layout_marginStart="1dp"
        android:layout_marginEnd="1dp"
        android:layout_marginBottom="1dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.625"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.214">


        <!-- Level  -->
        <LinearLayout
            android:layout_width="224dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:textAlignment="center">

            <TextView
                android:id="@+id/level_static"
                android:layout_width="126dp"
                android:layout_height="wrap_content"
                android:text="@string/level_static"
                android:textAlignment="center"
                android:textSize="25sp" />

            <TextView
                android:id="@+id/level_dinamic"
                android:layout_width="97dp"
                android:layout_height="wrap_content"
                android:text="@string/level_dinamic"
                android:textAlignment="center"
                android:textSize="25sp" />


        </LinearLayout>


        <!-- Score  -->
        <LinearLayout
            android:layout_width="224dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/score_static"
                android:layout_width="127dp"
                android:layout_height="wrap_content"
                android:text="@string/score_static"
                android:textAlignment="center"
                android:textSize="25sp" />

            <TextView
                android:id="@+id/score_dinamic"
                android:layout_width="94dp"
                android:layout_height="wrap_content"
                android:text="@string/score_dinamic"
                android:textAlignment="center"
                android:textSize="25sp" />

        </LinearLayout>


        <LinearLayout
            android:layout_width="225dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/heart_static"
                android:layout_width="128dp"
                android:layout_height="wrap_content"
                android:text="@string/heart_static"
                android:textAlignment="center"
                android:textSize="25sp" />

            <TextView
                android:id="@+id/heart_dinamic"
                android:layout_width="94dp"
                android:layout_height="wrap_content"
                android:text="@string/heart_dinamic"
                android:textAlignment="center"
                android:textSize="25sp" />
        </LinearLayout>


    </LinearLayout>

</android.support.constraint.ConstraintLayout>